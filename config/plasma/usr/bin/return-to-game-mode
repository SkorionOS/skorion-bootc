#!/bin/bash

if command -v waydroid &> /dev/null; then
  waydroid session stop
fi

sudo sed -i "s/^NoDisplay=true/#NoDisplay=true/" /usr/share/applications/plasma-wayland.desktop
# plasma-session-oneshot
# # sudo skorion-session-use-sddm gamescope-session-steam

USER=$(id -nu 1000)

echo "retuen gamemode, XDG_SESSION_TYPE=$XDG_SESSION_TYPE" | sudo systemd-cat -t os-session-select
# if wayland
if [ "$XDG_SESSION_TYPE" == "wayland" ]; then
  sudo -Eu $USER qdbus6 org.kde.Shutdown /Shutdown org.kde.Shutdown.logout
  exit
else
  sudo skorion-session-use-sddm gamescope-session-steam
fi